{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": false,
    "composite": true,
    "declaration": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
