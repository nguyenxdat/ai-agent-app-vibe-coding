# Backend Environment Variables

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# A2A Authentication (Optional)
# If set, A2A endpoints (/api/v1/a2a/message) will require Bearer token authentication
# If not set, A2A endpoints are publicly accessible without authentication
# A2A_API_KEY=your-secret-api-key-here

# API Keys (Optional - for LLM providers)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# Logging
LOG_LEVEL=INFO
